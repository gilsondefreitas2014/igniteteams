{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    //Início da configuração do babel
    "baseUrl": "./",
    "paths": {
      "@assets/*"     : ["./src/assets/*"],
      "@components/*" : ["./src/components/*"],
      "@routes/*"     : ["./src/routes/*"],
      "@screens/*"    : ["./src/screens/*"],
      "@storage/*"    : ["./src/storage/*"],
      "@utils/*"      : ["./src/utils/*"],
    }
    //Fim da configuração do babel
  }
}
